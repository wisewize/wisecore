{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "es2017", "es2015"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}